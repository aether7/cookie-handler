{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "globals": {
      "describe": true,
      "test": true,
      "expect": true,
      "afterEach": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2015
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
